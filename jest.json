{
	"moduleFileExtensions": [
		"ts",
		"tsx",
		"js",
		"json"
	],
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	},
	"testRegex": "/src/server/.*\\.(test|spec).(ts|tsx|js)$",
	"collectCoverageFrom": ["src/server/**/*.{js,jsx,tsx,ts}", "!**/node_modules/**", "!**/vendor/**"],
	"coverageReporters": ["json", "lcov"]
}
