{
	"name": "nuxtjs-nestjs-bio",
	"version": "1.0.0",
	"description": "A project for nuxtjs and nestjs integrated.",
	"author": "James Liauw",
	"license": "MIT",
	"pre-commit": [
		"lint"
	],
	"scripts": {
		"format": "prettier --write \"**/*.ts\"",
		"start": "cross-env NODE_ENV=production node dist/src/server/main.js",
		"start:dev": "npm run lint && cross-env NODE_ENV=development webpack --config webpack.config.js",
		"build": "npm run lint && cross-env NODE_ENV=production npm run clean && nuxt build && tsc",
		"lint": "tslint -p tsconfig.json -c tslint.json",
		"lintfix": "tslint -p tsconfig.json --fix",
		"clean": "rimraf dist",
		"client": "npm run start:dev",
		"serve": "npm run start:dev",
		"prestart:prod": "npm run build",
		"start:prod": "node dist/main.js",
		"test": "jest --config=jest.json",
		"test:watch": "jest --watch --config=jest.json",
		"test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage"
	},
	"dependencies": {
		"@nestjs/common": "6.5.2",
		"@nestjs/core": "6.5.2",
		"@nestjs/microservices": "5.7.4",
		"@nestjs/platform-express": "6.5.2",
		"@nestjs/testing": "6.5.2",
		"@nestjs/websockets": "5.7.4",
		"@nuxtjs/axios": "5.4.1",
		"@types/jasmine": "3.3.16",
		"@types/mocha": "5.2.7",
		"class-transformer": "0.2.3",
		"class-validator": "0.9.1",
		"cross-env": "5.2.0",
		"js-cookie": "^2.2.1",
		"nuxt": "2.8.1",
		"pre-commit": "1.2.2",
		"reflect-metadata": "0.1.13",
		"rimraf": "2.6.3",
		"rxjs": "6.3.3",
		"ts-loader": "5.3.3",
		"tslint-config-alloy": "0.2.1",
		"typescript": "3.5.3",
		"vant": "^2.1.2",
		"vuex-class": "0.3.1"
	},
	"devDependencies": {
		"@babel/plugin-transform-modules-commonjs": "7.2.0",
		"@nuxt/config": "2.4.5",
		"@nuxt/typescript": "2.8.1",
		"@types/jest": "24.0.15",
		"@types/node": "10.14.0",
		"jest": "24.8.0",
		"nodemon": "1.18.9",
		"nuxt-property-decorator": "2.1.3",
		"postcss-pxtorem": "^4.0.1",
		"prettier": "1.15.3",
		"stylus": "0.54.5",
		"stylus-loader": "3.0.2",
		"supertest": "4.0.2",
		"ts-jest": "24.0.2",
		"ts-node": "8.3.0",
		"tsconfig-paths": "3.7.0",
		"tslint": "5.13.1",
		"tslint-config-prettier": "1.18.0",
		"tslint-plugin-prettier": "2.0.1",
		"vuex-class-component": "1.4.3",
		"webpack-cli": "3.2.3",
		"webpack-shell-plugin": "0.5.0"
	},
	"browserslist": [
		"Android >= 4.0",
		"iOS >= 7"
	]
}
